  "item": [
    {
      "name": "1. Authentication Setup",
      "item": [
        {
          "name": "Login Super Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"superadmin@example.com\",\n  \"name\": \"Super Admin\",\n  \"role\": \"super_admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/request-magic-link",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "request-magic-link"]
            }
          }
        },
        {
          "name": "Verify Super Admin Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"REPLACE_WITH_MAGIC_TOKEN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify-magic-link",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-magic-link"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.to.have.status(200)) {",
                  "    const responseJson = pm.response.json();",
                  "    if (responseJson.data && responseJson.data.token) {",
                  "        pm.collectionVariables.set('superAdminToken', responseJson.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@test.com\",\n  \"name\": \"Test Customer\",\n  \"role\": \"customer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/request-magic-link",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "request-magic-link"]
            }
          }
        },
        {
          "name": "Verify Customer Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"REPLACE_WITH_CUSTOMER_MAGIC_TOKEN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify-magic-link",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-magic-link"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.to.have.status(200)) {",
                  "    const responseJson = pm.response.json();",
                  "    if (responseJson.data && responseJson.data.token) {",
                  "        pm.collectionVariables.set('customerToken', responseJson.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
