            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"iPhone 15 Pro\",\n  \"description\": \"Latest iPhone with advanced features\",\n  \"short_description\": \"Flagship iPhone with pro camera system\",\n  \"category_id\": \"{{categoryId}}\",\n  \"price\": 999.99,\n  \"sale_price\": 899.99,\n  \"quantity\": 50,\n  \"low_stock_threshold\": 5,\n  \"weight\": 0.221,\n  \"status\": \"published\",\n  \"visibility\": \"public\",\n  \"featured\": true,\n  \"tags\": [\"smartphone\", \"apple\", \"5g\"],\n  \"meta_title\": \"iPhone 15 Pro - Latest Apple Smartphone\",\n  \"meta_description\": \"Buy the latest iPhone 15 Pro with advanced camera system and A17 Pro chip\",\n  \"images\": [\n    {\n      \"url\": \"https://example.com/iphone15pro-1.jpg\",\n      \"alt_text\": \"iPhone 15 Pro front view\",\n      \"is_primary\": true\n    }\n  ]\n}"
